<p id="notice"><%= notice %></p>

<h1>Listing Cats</h1>

<table>
  <thead>
    <tr>
<!--       <th>User</th> -->
      <th>Name</th>
      <th> | Description</th>
      <th> | Picture</th>
      <th> | Date of birth</th>
      <th> | Breed</th>
      <th> | Sex</th>
      <th> | Origin</th>
      <th> | Dead</th>
      <th> | Cause of death</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cats.each do |cat| %>
      <tr>
<!--         <td><%= cat.user_id %></td> -->
        <td><%= cat.name %></td>
        <td> | <%= cat.description %></td>
        <td> | <%= image_tag cat.picture_url, width: '100%' if cat.picture.present? %></td>
        <td> | <%= cat.dateofbirth %></td>
        <td> | <%= cat.breed %></td>
        <td> | <%= cat.sex %></td>
        <td> | <%= cat.origin %></td>
        <td> | <%= cat.dead %></td>
        <td> | <%= cat.causeofdeath %></td>
        <td><%= link_to 'Show', cat %></td>
        <td><%= link_to 'Edit', edit_cat_path(cat) %></td>
        <td><%= link_to 'Destroy', cat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

