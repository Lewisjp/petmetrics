<p id="notice"><%= notice %></p>

<h1>Listing Conditions of all Pets</h1>

<table>
  <thead>
    <tr>
<!--       <th>Cat</th> -->
      <th>Veterinarian</th>
      <th> | Date of diagnosis</th>
      <th> | Condition</th>
      <th> | Condition form</th>
      <th> | Condition relapse</th>
      <th> | Remission</th>
      <th> | Remission date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diseases.each do |disease| %>
      <tr>
<!--         <td><%= disease.cat_id %></td> -->
        <td><%= disease.veterinarian %></td>
        <td> | <%= disease.dateofdiagnosis %></td>
        <td> | <%= disease.condition %></td>
        <td> | <%= disease.conditionform %></td>
        <td> | <%= disease.conditionrelapse %></td>
        <td> | <%= disease.remission %></td>
        <td> | <%= disease.remissiondate %></td>
        <td><%= link_to 'Show', disease %></td>
        <td><%= link_to 'Edit', edit_disease_path(disease) %></td>
        <td><%= link_to 'Destroy', disease, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

